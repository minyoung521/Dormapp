<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2DCDC">

    <!-- 타이틀 -->
    <TextView
        android:id="@+id/tv_inquiry_write_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="문의 작성"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#333333"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp" />

    <!-- 제목 입력 -->
    <EditText
        android:id="@+id/et_inquiry_title"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:hint="제목을 입력하세요"
        android:background="@drawable/edit_white_border"
        android:textAlignment="center"
        android:inputType="text"
        app:layout_constraintTop_toBottomOf="@id/tv_inquiry_write_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="24dp" />

    <!-- 내용 입력 -->
    <EditText
        android:id="@+id/et_inquiry_content"
        android:layout_width="0dp"
        android:layout_height="170dp"
        android:hint="문의 내용을 입력하세요"
        android:background="@drawable/edit_white_border"
        android:gravity="top|start"
        android:inputType="textMultiLine"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/et_inquiry_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="18dp" />

    <!-- 등록 버튼 -->
    <Button
        android:id="@+id/btn_inquiry_submit"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:background="@color/purple_200"
        android:text="등록"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_inquiry_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="28dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
