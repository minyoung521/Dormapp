<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2DCDC"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_moon"
            android:alpha="0.5" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="DormApp 회원가입"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 이름 라벨 -->
    <TextView
        android:id="@+id/tv_register_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="180dp"
        android:layout_marginBottom="4dp" />

    <!-- 이름 입력 -->
    <EditText
        android:id="@+id/et_register_name"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_white_border"
        android:hint="NAME"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아이디 라벨 -->
    <TextView
        android:id="@+id/tv_register_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_register_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 아이디 입력 -->
    <EditText
        android:id="@+id/et_register_id"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_white_border"
        android:hint="ID"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 비밀번호 라벨 -->
    <TextView
        android:id="@+id/tv_register_pw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_register_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 비밀번호 입력 -->
    <EditText
        android:id="@+id/et_register_pw"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_white_border"
        android:hint="PASSWORD"
        android:textAlignment="center"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이메일 라벨 -->
    <TextView
        android:id="@+id/tv_register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이메일"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_register_pw"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 이메일 입력 -->
    <EditText
        android:id="@+id/et_register_email"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_white_border"
        android:hint="EMAIL"
        android:textAlignment="center"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 학과 라벨 -->
    <TextView
        android:id="@+id/tv_register_department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="학과"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/et_register_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 학과 입력 -->
    <EditText
        android:id="@+id/et_register_department"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:background="@drawable/edit_white_border"
        android:hint="DEPARTMENT"
        android:textAlignment="center"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_register_department"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_register_button"
        android:layout_width="200dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@color/purple_200"
        android:text="회원가입"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/et_register_department"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
